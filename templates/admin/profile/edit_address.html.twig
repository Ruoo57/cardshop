{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(135deg, #1b1f2a, #2a3b4d);
            font-family: 'Arial', sans-serif;
            color: #eaeaea;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            color: #ffc107;
            margin-bottom: 30px;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.8);
        }

        form {
            max-width: 600px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            color: #00aaff;
            margin-bottom: 8px;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        input[type="text"], select {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            color: #fff;
            background: #2c3e50;
            border: 1px solid #34495e;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        input[type="text"]:focus, select:focus {
            outline: none;
            background: #34495e;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-success {
            background-color: #2ecc71;
        }

        .btn-success:hover {
            background-color: #27ae60;
            transform: translateY(-3px);
        }

        .btn-secondary {
            background-color: #95a5a6;
        }

        .btn-secondary:hover {
            background-color: #7f8c8d;
            transform: translateY(-3px);
        }

        .btn:active {
            transform: translateY(1px);
        }

        .btn + .btn {
            margin-left: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>{{ 'address.edit.title'|trans }}</h1>

    <form>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.street, {'label': 'address.form.street'|trans}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.postalCode, {'label': 'address.form.postal_code'|trans}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.city, {'label': 'address.form.city'|trans}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.country, {'label': 'address.form.country'|trans}) }}
        </div>
        <button type="submit" class="btn btn-success">{{ 'address.edit.save'|trans }}</button>
        <a href="{{ path('app_admin_profile') }}" class="btn btn-secondary">{{ 'address.edit.cancel'|trans }}</a>
        {{ form_end(form) }}
    </form>
{% endblock %}
