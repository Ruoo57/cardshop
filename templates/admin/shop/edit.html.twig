{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(135deg, #1b1f2a, #2a3b4d);
            font-family: 'Arial', sans-serif;
            color: #eaeaea;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            color: #ffc107;
            margin-bottom: 30px;
            text-shadow: 0 4px 10px rgba(0, 0, 0, 0.7);
        }

        form {
            max-width: 800px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            color: #00aaff;
            margin-bottom: 8px;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        input[type="text"], textarea, select {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            color: #fff;
            background: #2c3e50;
            border: 1px solid #34495e;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        input[type="text"]:focus, textarea:focus, select:focus {
            outline: none;
            background: #34495e;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

        button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
            border-radius: 5px;
            border: none;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        .btn-primary {
            background-color: #3498db;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            transform: translateY(-3px);
        }

        .btn-secondary {
            background-color: #95a5a6;
        }

        .btn-secondary:hover {
            background-color: #7f8c8d;
            transform: translateY(-3px);
        }

        button:active {
            transform: translateY(1px);
        }

        .btn + .btn {
            margin-left: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>{{ 'product.edit.heading'|trans({'%name%': product.name}) }}</h1>

    <div class="container">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ 'product.edit.save'|trans }}</button>
        {{ form_end(form) }}

        <a href="{{ path('shop_home') }}" class="btn btn-secondary">{{ 'product.edit.back'|trans }}</a>
    </div>
{% endblock %}
