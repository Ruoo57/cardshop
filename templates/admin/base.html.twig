<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'base.title'|trans }}{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    {% block stylesheets %}
        <style>
            nav.navbar {
                background-color: #00264d;
                padding: 10px 20px;
            }

            .navbar-brand {
                color: #000000;
                font-size: 1.5rem;
                text-decoration: none;
            }

            .navbar-nav .nav-link {
                color: #000000;
                margin-left: 15px;
                text-decoration: none;
            }

            .navbar-nav .nav-link:hover {
                text-decoration: underline;
            }
        </style>
    {% endblock %}
</head>
<body>
    <header class="container py-3">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">{{ 'base.nav.brand'|trans }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="{{ 'base.nav.toggle'|trans }}">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_profile') }}">{{ 'base.nav.profile'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_dashboard') }}">{{ 'base.nav.dashboard'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('shop_home') }}">{{ 'base.nav.shop'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_product_new') }}">{{ 'base.nav.add_product'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <form action="{{ path('app_logout') }}" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-link nav-link">{{ 'base.nav.logout'|trans }}</button>
                                </form>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">{{ 'base.nav.login'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">{{ 'base.nav.register'|trans }}</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-5">
        {% block body %}{% endblock %}
    </main>
</body>
</html>
