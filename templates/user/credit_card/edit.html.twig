{% extends 'user/base.html.twig' %}

{% block title %}{{ 'credit_card.edit.title'|trans }}{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #1e1e2e;
        color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        color: #ffc107;
        text-shadow: 0 2px 5px rgba(0, 0, 0, 0.8);
        margin-bottom: 30px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        background-color: #2c3e50;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    }

    label {
        font-size: 1rem;
        color: #f5f5f5;
        margin-bottom: 8px;
        display: block;
    }

    input {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        margin-bottom: 20px;
        border: 1px solid #00aaff;
        border-radius: 5px;
        background-color: #34495e;
        color: #fff;
    }

    input:focus {
        outline: none;
        border-color: #f0a700;
        background-color: #2c3e50;
    }

    .btn {
        display: inline-block;
        width: 48%;
        padding: 12px;
        font-size: 1rem;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
        background-color: #66ccff;
        transform: translateY(-2px);
    }

    .btn:active {
        transform: translateY(1px);
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-secondary {
        background-color: #6c757d;
    }
</style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ 'credit_card.edit.title'|trans }}</h1>

        <div class="card p-4 mt-4">
            {{ form_start(form) }}
                {{ form_row(form.number, {'label': 'credit_card.number'|trans }) }}
                {{ form_row(form.expirationDate, {'label': 'credit_card.expiration_date'|trans }) }}
                {{ form_row(form.cvv, {'label': 'credit_card.cvv'|trans }) }}
                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-success">{{ 'credit_card.edit.save'|trans }}</button>
                    <a href="{{ path('app_profile') }}" class="btn btn-secondary">{{ 'credit_card.edit.cancel'|trans }}</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
